  "description": "Controle Financeiro mensal com Next.js e Tailwind",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next build",
    "start": "next start",
    "lint": "next lint",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
