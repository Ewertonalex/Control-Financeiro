    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.10",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/html2canvas": "^1.0.0",
